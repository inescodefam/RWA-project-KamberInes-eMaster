@using WebApp.Models
@model WebApp.Models.ServiceSearchVM
@{
    ViewBag.Title = "Service Search";
}

<h2 class="mb-4">Search for Professional Services</h2>
<!-- At top of view -->
<p>Number of Service types: @(Model.ServiceTypes == null ? "null" : Model.ServiceTypes.Count.ToString())</p>
<p>Number of cities: @(Model.Cities == null ? "null" : Model.Cities.Count.ToString())</p>

@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
    <div style="m-3 text-end">
        <a asp-action="Create" asp-controller="Service" class="btn btn-primary mb-3">
            + Add Service
        </a>
    </div>
    <div class="col-md-4">
        <a asp-action="Index" asp-controller="ServiceType" class="btn btn-primary mb-3">
            Manage service types
        </a>
    </div>
}

@using (Html.BeginForm("Search", "Service", FormMethod.Post))
{
    <div class="col-md-6 d-flex">
    <div class="d-flex f-direction:row text-nowrap m-3 gap-3">
            <label asp-for="SelectedServiceTypeName" class="form-label"></label>
            @Html.DropDownListFor(
                     m => m.SelectedServiceTypeName,
                     new SelectList(
                     Model.ServiceTypes,
                     "ServiceTypeName", "ServiceTypeName", Model.SelectedServiceTypeName),
                     "-- Select Service Type --"
                     )
    </div>
        <div class="d-flex f-direction:row text-nowrap m-3 gap-3">
            <label asp-for="SelectedCityId" class="form-label"></label>
            @Html.DropDownListFor(
                     m => m.SelectedCityId,
                     new SelectList(Model.Cities, "Idcity", "Name", Model.SelectedCityId),
                     "-- Select City --"
                     )
    </div>
    <div>
            <button type="submit" class="btn btn-primary w-100 mb-3 mt-3">Search</button>
        </div>
    </div>
}

@if (Model.Services != null && Model.Services.Any())
{
    <h3 class="mt-4">Results</h3>
    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-light">
            <tr>
                <th>Professional</th>
                <th>City</th>
                <th>Service Type</th>
                <th>Description</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var service in Model.Services)
            {
                <tr>
                    <td>@service.ProfessionalName</td>
                    <td>@string.Join(", ", service.CityNames ?? new List<string>())</td>
                    <td>@service.ServiceTypeName</td>
                    <td>@service.Description</td>
                    <td>@service.Price</td>

                        <td>
                        <button class="btn btn-success add-to-your-services"
                                data-id="@service.IdService"
                                data-name="@service.ServiceTypeName"
                                data-desc="@service.Description"
                                data-price="@service.Price">
                            Order
                        </button>

                            <a asp-action="Edit" asp-controller="Service"
                               asp-route-id="@service.IdService" class="btn btn-warning">Edit</a>
                            <form asp-action="Delete" asp-controller="Service"
                                  asp-route-id="@service.IdService" method="post"
                                  style="display:inline;"
                                  onsubmit="return confirm('Are you sure?');">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
}
else
{
    <div class="alert alert-warning mt-4" role="alert">
        No services found for the selected criteria.
    </div>
}
@section Scripts {
    <script src="~/js/site.js"></script>
}

