@using WebApp.Models
@model WebApp.Models.ServiceSearchVM
@{
    ViewBag.Title = "Service Search";
}

<h2>Search for Professional Services</h2>
<!-- At top of view -->
<p>ServiceTypes: @(Model.ServiceTypes == null ? "null" : Model.ServiceTypes.Count.ToString())</p>
<p>Cities: @(Model.Cities == null ? "null" : Model.Cities.Count.ToString())</p>

@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
    <div style="align-self: flex-end;">
        <a asp-action="Create" asp-controller="Service" class="btn btn-primary" style="margin-left: 10px;">
            + Add Service
        </a>
    </div>

}

@using (Html.BeginForm("Search", "Service", FormMethod.Get))
{
    <div style="display: flex; align-items: center; gap: 1rem;">
    <div>
        <label>Service Type:</label>
            @Html.DropDownListFor(
                     m => m.SelectedServiceTypeName,
                     new SelectList(
                     Model.ServiceTypes,
                     "ServiceTypeName", "ServiceTypeName", Model.SelectedServiceTypeName),
                     "-- Select Service Type --"
                     )
    </div>
        <div style="align-self: flex-end;">
            <a asp-action="CreateServiceType" asp-controller="ServiceType" class="btn btn-success" style="margin-left: 10px;">
                + Add Service Type
            </a>
        </div>
    <div>
        <label>City:</label>
            @Html.DropDownListFor(
                     m => m.SelectedCityId,
                     new SelectList(Model.Cities, "Idcity", "Name", Model.SelectedCityId),
                     "-- Select City --"
                     )
    </div>
    <div>
        <button type="submit">Search</button>
        </div>
    </div>
}

@if (Model.Services != null && Model.Services.Any())
{
    <h3>Results</h3>
    <table>
        <thead>
            <tr>
                <th>Professional</th>
                <th>City</th>
                <th>Service Type</th>
                <th>Description</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var service in Model.Services)
            {
                <tr>
                    <td>@service.ProfessionalName</td>
                    <td>@service.CityName</td>
                    <td>@service.ServiceTypeName</td>
                    <td>@service.Description</td>
                    <td>@service.Price</td>
                    <td>
                        <button class="btn btn-success add-to-your-services"
                                data-id="@service.IdService"
                                data-name="@service.ServiceTypeName"
                                data-desc="@service.Description"
                                data-price="@service.Price">
                            Order
                        </button>
                    </td>
                    @*@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    { *@
                        <td>
                            <a asp-action="Edit" asp-controller="Service"
                               asp-route-id="@service.IdService" class="btn btn-warning">Edit</a>
                            <form asp-action="Delete" asp-controller="Service"
                                  asp-route-id="@service.IdService" method="post"
                                  style="display:inline;"
                                  onsubmit="return confirm('Are you sure?');">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    @* } *@
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No services found for the selected criteria.</p>
}
@section Scripts {
    <script src="~/js/site.js"></script>
}

