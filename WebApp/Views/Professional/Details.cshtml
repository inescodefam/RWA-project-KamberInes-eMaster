@model WebApp.Models.ProfessionalDetailsVm

@{
    ViewData["Title"] = "Professional details";
}

<h2>Professional details</h2>

<table class="table table-bordered">
    <tr>
        <th>@Html.DisplayNameFor(model => model.UserName)</th>
        <td>@Html.DisplayFor(model => model.UserName)</td>
    </tr>
    <tr>
        <th>@Html.DisplayNameFor(model => model.Email)</th>
        <td>@Html.DisplayFor(model => model.Email)</td>
    </tr>
    <tr>
        <th>@Html.DisplayNameFor(model => model.Phone)</th>
        <td>@Html.DisplayFor(model => model.Phone)</td>
    </tr>
    <tr>
        <th>@Html.DisplayNameFor(model => model.FirstName)</th>
        <td>@Html.DisplayFor(model => model.FirstName)</td>
    </tr>
    <tr>
        <th>@Html.DisplayNameFor(model => model.LastName)</th>
        <td>@Html.DisplayFor(model => model.LastName)</td>
    </tr>
</table>

<h3>Services</h3>
@if (Model.Services != null && Model.Services.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Service Type</th>
                <th>Description</th>
                <th>Price</th>
                <th>Cities</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var service in Model.Services)
            {
                <tr>
                    <td>@service.ServiceTypeName</td>
                    <td>@service.Description</td>
                    <td>@service.Price.ToString("C")</td>
                    <td>
                        @if (service.CityNames != null && service.CityNames.Any())
                        {
                            @string.Join(", ", service.CityNames)
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No services found for this professional.</p>
}

<a href="@Url.Action("Edit", new { id = Model.IdProfessional })" class="btn btn-primary">Edit</a>
<a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
