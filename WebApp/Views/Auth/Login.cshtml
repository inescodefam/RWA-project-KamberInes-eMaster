@model WebApp.Models.AuthVM
@if (!User.Identity.IsAuthenticated)
{
    <div class="container mt-5" style="max-width: 400px;">
        <div class="card shadow">
            <div class="card-body">
                <h3 class="card-title text-center mb-4">Sign In</h3>
                <form asp-controller="Auth" asp-action="Login" method="post" autocomplete="off">
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" placeholder="Email" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>
                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-primary">Login</button>
                    </div>
                    <div asp-validation-summary="All" class="text-danger small mb-2"></div>
                </form>
                <div class="text-center mt-3">
                    <a asp-action="Register" asp-controller="Auth" class="btn btn-link">Don't have an account? Register</a>
                </div>
            </div>
        </div>
        @* <div class="text-center mt-3">
            <a href="http://localhost:5020/" class="btn btn-link">HTML static page</a>
        </div> *@
    </div>
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



