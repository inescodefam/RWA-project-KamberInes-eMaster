@model WebApp.Models.ServiceTypeVM

<h2>Add New Service Type</h2>
<form asp-action="CreateServiceType" asp-controller="ServiceType" method="post">
    <div class="form-group">
        <label asp-for="ServiceTypeName"></label>
        <input asp-for="ServiceTypeName" class="form-control" />
        <span asp-validation-for="ServiceTypeName" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
    <a asp-action="Search" asp-controller="Service" class="btn btn-secondary">Back</a>
</form>