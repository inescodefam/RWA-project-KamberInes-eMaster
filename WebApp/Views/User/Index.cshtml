@model List<WebApp.Models.UserVM>

@{
    ViewData["Title"] = "User List";
    
}
@if (Model == null || !Model.Any())
{
    <div>No users found or you are not authorized.</div>
}

<h2>User List</h2>
<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Username</td>
                <td>@user.Email</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>
                    <div class="btn-group" role="group">
                        <form asp-action="Delete" asp-route-id="@user.Iduser" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger btn-sm"
                                    onclick="return confirm('Are you sure you want to delete this user?')">
                                Delete
                            </button>
                        </form>

                        <button class="btn btn-primary btn-sm update-role"
                                data-userid="@user.Iduser"
                                data-username="@user.Username">
                            Update Role
                        </button>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>