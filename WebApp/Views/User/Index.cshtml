@model List<WebApp.Models.UserVM>

@{
    ViewData["Title"] = "User List";
    
}
@if (Model == null || !Model.Any())
{
    <div>No users found or you are not authorized.</div>
}

<h2>User List</h2>
<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Username</td>
                <td>@user.Email</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>
                    <div class="btn-group" role="group">
                        <form asp-action="DeleteUser" asp-route-id="@user.Iduser" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger btn-sm"
                                    onclick="return confirm('Are you sure you want to delete this user?')">
                                Delete
                            </button>
                        </form>

                        <button class="btn btn-primary btn-sm update-role"
                                data-userid="@user.Iduser"
                                data-username="@user.Username">
                            Update Role
                        </button>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="modal fade" id="roleModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Update Role for <span id="usernameSpan"></span></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <form id="roleForm" method="post">
                    <input type="hidden" id="userIdInput" name="userId">
                    <div class="mb-3">
                        <label for="roleNameInput" class="form-label">New Role</label>
                        <input type="text" class="form-control" id="roleNameInput" name="roleName"
                               placeholder="Enter role (e.g., Admin, User)" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.update-role').click(function() {
                const userId = $(this).data('userid');
                const username = $(this).data('username');

                $('#usernameSpan').text(username);
                $('#userIdInput').val(userId);
                $('#roleModal').modal('show');
            });

            $('#roleForm').submit(function(e) {
                e.preventDefault();
                const formData = $(this).serialize();

                $.ajax({
                    url: '@Url.Action("UpdateRole", "User")',
                    type: 'POST',
                    data: formData,
                    success: function() {
                        $('#roleModal').modal('hide');
                        alert('Role updated successfully!');
                    },
                    error: function(xhr) {
                        alert('Error updating role: ' + xhr.responseText);
                    }
                });
            });
        });
    </script>
}