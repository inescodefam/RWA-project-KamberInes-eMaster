@model List<WebApp.Models.UserVM>

@{
    ViewData["Title"] = "User List";
    
}
@if (Model == null || !Model.Any())
{
    <div>No users found or you are not authorized.</div>
}

<h2>User List</h2>
<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Username</td>
                <td>@user.Email</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
            </tr>
        }
    </tbody>
</table>